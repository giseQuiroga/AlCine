@model IEnumerable<DataAccessLayer.Reserva>
@{
    ViewBag.Title = "Reserva";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Reserva/reserva.js"></script>
<script type="text/javascript">


    var urls = {
        buscarPeliculas: '@Url.Action("obtenerPeliculas", "Pelicula")',
        obtenerReservas: '@Url.Action("ListarReservas", "Reserva")',
        indexReservas: '@Url.Action("Index", "Reserva")'
    };

</script>

<h1>Reservas</h1>
<br />
<div class="jumbotron">
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group col-md-4">
                    <label class="control-label col-md-4">Pelicula</label>
                    <div class="col-md-8">
                        <select class="form-control" id="cmbPelicula"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label col-md-4">Fecha de Inicio</label>
                    <div class="col-md-8">
                        <input type="date" class="form-control" id="fechaInicio" required />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label col-md-4">Fecha de Fin</label>
                    <div class="col-md-8">
                        <input type="date" class="form-control" id="fechaFin" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <button type="button" id="btnBuscar" class="btn btn-primary" onclick="buscarReservas()">Buscar</button>
                    </div>
                </div>
            </form>

            <table class="table table-striped table-hover">
                <thead>
                    <tr class="info">
                        <th>Pelicula</th>
                        <th>Sede</th>
                        <th>Versión</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>
</div>

