@model DataAccessLayer.Reserva
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de la Reserva</h2>
<br />


<div class="jumbotron">
    <p>
        @ViewBag.Mensaje
        <br />
        @ViewBag.DatosReserva
    </p>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="info">
                        <th>@Html.DisplayNameFor(model => model.FechaHoraInicio)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.NumeroDocumento)</th>
                        <th>@Html.DisplayNameFor(model => model.CantidadEntradas)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaCarga)</th>
                        <th>@Html.DisplayNameFor(model => model.Pelicula.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Sede.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.TiposDocumento.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.Versione.Nombre)</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(modelItem => modelItem.FechaHoraInicio)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.Email)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.NumeroDocumento) </td>
                        <td>@Html.DisplayFor(modelItem => modelItem.CantidadEntradas)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.FechaCarga)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.Pelicula.Nombre) </td>
                        <td>@Html.DisplayFor(modelItem => modelItem.Sede.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.TiposDocumento.Descripcion)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.Versione.Nombre)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>